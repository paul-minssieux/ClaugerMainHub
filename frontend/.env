# Variables d'environnement pour ClaugerMainHub - UC 1.2
# Configuration de l'orchestrateur Piral

# URL du feed service pour les pilets
VITE_PILETS_FEED_URL=http://localhost:3001/api/pilets

# URL de base de l'API
VITE_API_BASE_URL=http://localhost:3000/api

# Stratégie de cache (cache-first, network-first, cache-only)
VITE_PILETS_CACHE_STRATEGY=network-first

# TTL du cache en millisecondes (1 heure par défaut)
VITE_PILETS_CACHE_TTL=3600000

# Activer le mode debug Piral
VITE_PIRAL_DEBUG=true

# URL CDN pour les assets partagés
VITE_CDN_URL=http://localhost:3002

# Timeout pour le chargement des pilets (ms)
VITE_PILETS_TIMEOUT=10000

# Nombre maximum de tentatives de chargement
VITE_PILETS_RETRY=3